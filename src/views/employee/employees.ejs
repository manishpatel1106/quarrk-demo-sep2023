<%- include('../partials/header',{ title: "Employee List" }) %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  </head>

  <body>
    <%- include('../partials/navigation') %>

      <main>
        <a href="add-employee" class="btn btn-primary btn-sm float-right m-2">
          <i class="fas fa-plus-circle"></i> Add New Employee
        </a>
        <% if(employees.length> 0) { %>
          <div class="row">
            <div class="input-group col-md-4">
              <input class="form-control py-2" type="search" value="" placeholder="Search" id="example-search-input">
              <span class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span>
            </div>
          </div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Employee ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Id</th>
                <th scope="col">Joining Date</th>
                <th scope="col">Gender</th>
                <th scope="col">Department</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let employee of employees) { %>
                <tr>
                  <td>
                    <% if(employee.fileName==="" ) {%>
                      <img src="<%= employee.gender === 'Male' ? 'male' : 'female' %>.png" class="card-image" alt="...">
                      <%} else {%>
                        <img src="<%= employee.fileName%>" class="card-image" alt="...">
                        <%}%>
                  </td>
                  <th scope="row">
                    <%= employee.employeeNumber %>
                  </th>
                  <td>
                    <%= employee.firstName %>
                  </td>
                  <td>
                    <%= employee.lastName %>
                  </td>
                  <td>
                    <%= employee.email %>
                  </td>
                  <td>
                    <%= employee.joiningDate %>
                  </td>
                  <td>
                    <%= employee.gender %>
                  </td>
                  <td>
                    <%= employee.department %>
                  </td>
                  <td>
                    <a href="edit-employee?employeeNo=<%= employee.employeeNumber %>" class="btn btn-info btn-sm">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="delete-employee?employeeNo=<%= employee.employeeNumber %>" class="btn btn-info btn-sm"><i class="fas fa-trash"></i></a>
                  </td>
                </tr>
                <%}%>
            </tbody>
          </table>
          <% } else { %>
            <h1>No Employees Found.</h1>
            <% } %>
              <%- include('../partials/pagination') %>
      </main>

      <%- include('../partials/footer') %>