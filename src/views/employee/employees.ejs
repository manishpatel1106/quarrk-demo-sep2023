<%- include('../partials/header') %>
    </head>

    <body>
        <%- include('../partials/navigation') %>
            <a class="button" href="add-employee">Add Employee</a>
            <main>
                <% if(employees.length> 0) { %>
                    <!-- <h1> Employees Found.</h1> -->
                    <!-- <div> -->
                    <div class="gradient-cards">
                        <% for(let employee of employees) { %>
                            <!-- <span>
                                <%= employee.firstName %>
                            </span> -->
                            <div class="card">
                                <div style="height: 94px;overflow: hidden"><img src="<%= employee.fileName %>"
                                        alt="Avatar" style="max-width:37%;margin-left: 65px;">
                                </div>
                                <div style="margin-left: 186px;">
                                    <a href="add-employee"><img style="max-width:30%; margin-left: -12px;" src="edit.png"></a>
                                    <a href="add-employee"><img style="max-width:30%; margin-left: 3px;"
                                            src="View-Details.png"></a>
                                            <a href="add-employee"><img style="max-width:30%; margin-left: 4px;"
                                                src="delete.png"></a>
                                            
                                </div>
                                <div class="container">
                                    <p class="fontsize"><b>Employee ID:-</b>
                                        <%= employee.employeeNumber %>
                                    </p>
                                    <p class="fontsize"><b>First Name:-</b>
                                        <%= employee.firstName %>
                                    </p>
                                    <p class="fontsize"><b>Last Name:-</b>
                                        <%= employee.lastName %>
                                    </p>
                                    <p class="fontsize"><b>Joining Date:-</b>
                                        <%= employee.birthDay %>
                                    </p>
                                </div>
                            </div>
                            <%}%>
                    </div>
                    <!-- pagination elements -->
                    <%- include('../partials/pagination',{pagination: pagination}) %>
                        <% } else { %>
                            <h1>No Employees Found.</h1>
                            <% } %>

            </main>
            <%- include('../partials/footer') %>